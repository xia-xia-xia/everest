/* pages/create/create.wxss */
.book-title {
  margin: 15rpx 5%;
  width: 90%;
  text-align: center;
  height: 50rpx;
  font-size: 28rpx;
  border: 1px solid #f5f5f5;
}
.title {
  margin: 15rpx 5%;
  width: 90%;
  text-align: center;
  height: 60rpx;
  font-size: 38rpx;
  border-bottom: 1px solid #f0eeee;
}

.card-name {
  color: rgb(145, 128, 128);
  font-size: 26rpx;
  font-weight: bold;
  margin: 20rpx;
}

.content {
  margin: 20rpx;
}

.row .text {
  flex: 1;
  width: 100%;
  font-size: 35rpx;
  color: #666;
  margin: 12rpx;
}

.other {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}

.other1 {
  margin: 20rpx;
}
.switch{
  margin: 20rpx;
  zoom: .7;
}
.bottom {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.bottom .btn {
  flex: 1;
  line-height: 2;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin: 30rpx 30rpx;
}

.btn.success {
  background: #1aad19;
  color: #fff;
}

.btn.del {
  background: #e64340;
  color: #fff;
}
